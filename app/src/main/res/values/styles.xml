<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ab47bc</item>
        <item name="colorPrimaryDark">#790e8b</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme of a EditText -->
    <style name="EditText_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/shape_edittext_border_top</item>
        <item name="android:textColorHint">@color/colorPadrao</item>
        <item name="android:textColor">@color/colorPadrao</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditText_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/shape_edittext_border_bottom</item>
        <item name="android:textColorHint">@color/colorPadrao</item>
        <item name="android:textColor">@color/colorPadrao</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_button_box</item>
        <item name="android:textColor">@color/colorPadrao</item>
    </style>

</resources>
